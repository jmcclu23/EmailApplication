<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title><%= user.local.name %> Email Application</title>
    <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.css">
  </head>
  <body>
    <div class="container">
      <div class="page-header text-center">
        <h1>Welcome, <%= user.local.name %></h1>
        <a href="/profile" class="btn btn-default btn-sm">Inbox</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="well">
        <form action="/send" method="post">
          <p>To:  <input type="text" name="toID"></p></br>
          <p>From:
            <input type="text" name="fromID" value = <%= user.local.email %>
              readonly></p></br>
          <p>Subject: <input type="text" name="subject"></p></br>
          <textarea cols="50" rows="10" name="emailBody"></textarea>
          <input type="submit" value = "send">
        </form>
      </div>
    </div>
  </body>
</html>
